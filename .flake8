[flake8]
select = E,F,W,ANN,B,B9,BLK,C,D,DAR,I,S
ignore = E203,E501,W503,I101,I201,F401,F403,S001,D100,D101,D102,D103,D104,D105,D106,D107,D200,D205,D400,W504,D202,E203,W503,B006,S311
max-line-length = 88
max-complexity = 10
application-import-names = hypermodern_python,tests
import-order-style = google
docstring-convention = google
per-file-ignores =
    tests/*:S101,DAR101
    noxfile.py:S101,DAR101
